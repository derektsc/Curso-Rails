<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thread>
      <tr>
        <th>Description</th>
        <th>Acronym</th>
        <th>Url Image</th>
      </tr>
  </thread>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "30x30" %></td>
        <td><%= link_to 'show', coin %></td>
        <td><%= link_to 'edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'delete', coin, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
